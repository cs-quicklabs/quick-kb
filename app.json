{
  "name": "Quick KB",
  "description": "A Knowledge Base application built with Laravel and SQLite.",
  "keywords": ["php", "laravel", "sqlite", "nginx"],
  "website": "https://github.com/yourusername/your-repo",
  "repository": "https://github.com/yourusername/your-repo",
  "stack": "container",
  "dockerfile_path": "Dockerfile",
  "dockerfile_context": ".",
  "features": {
    "runtime-env-vars": true
  },
  "env": {
    "APP_NAME": {
      "description": "Name of your Laravel application",
      "value": "Quick KB"
    },
    "APP_ENV": {
      "description": "Application environment",
      "value": "production"
    },
    "APP_KEY": {
      "description": "Application encryption key (will be generated)",
      "generator": "secret"
    },
    "APP_DEBUG": {
      "description": "Enable debug mode",
      "value": "false"
    },
    "APP_URL": {
      "description": "Application URL (will be set automatically)",
      "value": "${APP_URL}"
    }
  }
}